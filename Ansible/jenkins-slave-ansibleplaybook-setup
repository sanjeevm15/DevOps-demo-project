---
- hosts: Build-slave
  become: true
  tasks:
  - name: install java 
    apt:
     name: openjdk-17-jre
     state: present

  - name: download maven  
    get_url: 
     url: https://dlcdn.apache.org/maven/maven-3/3.9.9/binaries/apache-maven-3.9.9-bin.tar.gz
     dest: /opt

  - name: Extract packages 
    unarchive: https://dlcdn.apache.org/maven/maven-3/3.9.9/binaries/apache-maven-3.9.9-bin.tar.gz
     src: /opt/apache-maven-3.9.1-bin.tar.gz
     dest: /opt 
     remote_src: yes 